<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

        <TextView
            android:id="@+id/widget_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_edge_left"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:contentDescription="@null" />

            <ListView
                android:id="@+id/widget_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@android:color/transparent"
                android:dividerHeight="1dp" />

            <ImageView
                android:id="@+id/widget_edge_right"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:contentDescription="@null" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_footer_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/widget_btn_picker"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/ic_widget_picker"
                android:scaleType="fitCenter"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/widget_btn_open_app"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/ic_settings_widget"
                android:scaleType="fitCenter"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/widget_btn_reorder"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/ic_reorder"
                android:scaleType="fitCenter"
                android:contentDescription="@null" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/widget_error_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#FF000000"
        android:background="#CCFFFFFF"
        android:padding="16dp"
        android:visibility="gone" />

</FrameLayout>
