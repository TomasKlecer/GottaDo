<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GottaDo" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.GottaDo.Translucent" parent="Theme.GottaDo">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.GottaDo.Popup" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustResize</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Theme.GottaDo.TrampolineTransparent" parent="Theme.GottaDo">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
